{
  "name": "Your Custom Theme",
  "description": "Edit this theme by hand - change colors, sizes, etc.",
  "layout": {
    "margin": 40,               "← Change page margins (20-60)"
    "cardPadding": 20,          "← Change card padding (10-30)"  
    "sectionSpacing": 35,       "← Space between sections (20-50)"
    "headerHeight": 120,        "← Header height (80-150)"
    "footerHeight": 60,         "← Footer height (30-80)"
    "cardHeight": 60,           "← Task card height (40-80)"
    "statCardHeight": 80,       "← Statistics card height (60-100)"
    "statCardsPerRow": 2        "← Stats per row (2-4)"
  },
  "colors": {
    "primary": "#YOUR_COLOR",   "← Main color (header, accents)"
    "secondary": "#YOUR_COLOR", "← Secondary color (badges)"
    "accent": "#YOUR_COLOR",    "← Accent color (highlights)"
    "success": "#00C851",       "← Success color (green)"
    "warning": "#FF8800",       "← Warning color (orange)"
    "danger": "#FF4444",        "← Danger color (red)"
    "white": "#FFFFFF",
    "lightGray": "#F5F5F5",
    "mediumGray": "#999999",
    "darkGray": "#333333",
    "black": "#000000"
  },
  "typography": {
    "titleSize": "xx-large",    "← Title size: small, medium, large, x-large, xx-large"
    "subtitleSize": "x-large",  
    "headerSize": "large",
    "bodySize": "medium", 
    "captionSize": "small",
    "titleWeight": "bold",      "← Font weight: normal, bold, 300, 600"
    "headerWeight": "bold",
    "bodyWeight": "normal"
  },
  "components": {
    "header": {
      "background": "primary",  "← Header background color"
      "textColor": "white",     "← Header text color"
      "accentHeight": 6,        "← Accent stripe height (2-10)"
      "logoSize": 60,           "← Logo size (30-80)"
      "showLogo": true,         "← Show/hide logo: true or false"
      "showAccentStripe": true  "← Show/hide accent stripe"
    },
    "statsCards": {
      "background": "lightGray", "← Stats card background"
      "borderColor": "primary",  "← Border color"
      "accentColor": "accent",   "← Top accent color"
      "accentHeight": 4,         "← Accent height (2-8)"
      "iconSize": 10,            "← Icon size (6-12)"
      "showIcons": true,         "← Show/hide icons"
      "showBorder": true         "← Show/hide borders"
    },
    "taskCards": {
      "background": "white",     "← Task card background"
      "borderColor": "lightGray", "← Border color"
      "statusIndicatorWidth": 6,  "← Left indicator width (2-8)"
      "badgeWidth": 30,          "← Number badge width (20-40)"
      "badgeHeight": 24,         "← Number badge height (16-30)"
      "showBadges": true,        "← Show/hide number badges"
      "showStatusIndicator": true "← Show/hide status indicators"
    },
    "footer": {
      "background": "primary",   "← Footer background"
      "textColor": "lightGray",  "← Footer text color"
      "showTimestamp": true,     "← Show/hide timestamp"
      "showPageNumber": true     "← Show/hide page numbers"
    }
  }
}